{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:import/errors"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "node/exports-style": ["error", "module.exports"],
    "node/no-missing-require": "error",
    "no-undef": "error"
  }
}
